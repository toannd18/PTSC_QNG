@model DataModel.Model.Systems.AppUserModel
<form class="form-horizontal" id="userform" enctype="multipart/form-data">
    @Html.HiddenFor(m=>m.Id)
    @Html.HiddenFor(m=>m.Avatar)
    <div class="form-group">
        <div class="col-md-8">
            <img src="@Url.Content(Model.Avatar)" style="margin:10px" height="130" width="180" id="imagepath" />
            <input type="file" id="ImageUpload" accept=".jpg,.png" onchange="ShowPreviewImage(this,document.getElementById('imagepath'))">
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Tài Khoản</label>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
            @Html.ValidationMessageFor(m=>m.UserName, null,new { @class="text-danger"})
        </div>
    </div>
    @if (Model.Id < 1)
    {
        <div class="form-group">
            <label class="col-md-2 control-label">Mật Khẩu</label>
            <div class="col-md-8">
                @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
                @Html.ValidationMessageFor(m => m.PasswordHash, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Xác Nhận Mật Khẩu</label>
            <div class="col-md-8">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
            </div>
        </div>
    }
   
    <div class="form-group">
        <label class="col-md-2 control-label">Họ và Tên</label>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
            @Html.ValidationMessageFor(m => m.FullName, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Địa Chỉ</label>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
            @Html.ValidationMessageFor(m => m.Address, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Ngày Sinh</label>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.BrithDay, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
            @Html.ValidationMessageFor(m => m.BrithDay, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Giới Tính</label>
        <div class="col-md-8">
            @Html.DropDownListFor(m => m.Gender, (IEnumerable<SelectListItem>)ViewBag.Sex, new {@class="form-control" })
            @Html.ValidationMessageFor(m => m.Gender, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Bộ Phận</label>
        <div class="col-md-8">
            @Html.DropDownListFor(m => m.Ma_BP, ViewBag.Dept as SelectList, "--- Chọn ---", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Ma_BP, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Tổ</label>
        <div class="col-md-8">
            @Html.DropDownListFor(m => m.Ma_TO, ViewBag.Team as SelectList, "--- Chọn ---", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Ma_TO, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Chức Vụ</label>
        <div class="col-md-8">
            @Html.DropDownListFor(m => m.Ma_CV, ViewBag.Position as SelectList, "--- Chọn ---", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Ma_CV, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Email</label>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <input type="button" class="btn btn-success" onclick="save()" value="Lưu" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        </div>
    </div>
</form>
