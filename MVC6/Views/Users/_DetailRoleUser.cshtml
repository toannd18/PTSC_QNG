@model DataModel.Model.Systems.RoleUserModel
<form class="form-horizontal">
    @Html.HiddenFor(m=>m.Id)
    <div class="form-group row">
        <div class="col-md-6">
            <label for="UserId"><strong>Tài Khoản</strong></label>
            @Html.DropDownListFor(m=>m.UserId,  ViewBag.User as SelectList,new {@class="form-control", @disabled = "true" })
        </div>
        <div class="col-md-6">
            <label for="RoleId"><strong>Quyền</strong></label>
            @Html.DropDownListFor(m => m.RoleId, ViewBag.Role as SelectList,"--- Chọn ---", new { @class = "form-control"  })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-6 col-md-6">
            <input type="button" class="btn btn-primary" value="Lưu" onclick="saverole()" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        </div>
    </div>
</form>
