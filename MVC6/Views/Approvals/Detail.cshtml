@model DataModel.Model.Applications.RequestModel
@{
    ViewBag.Title = "Danh Sách Kiểm Tra";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}
@section style{
 
<style>
    .ui-autocomplete-loading {
        background: white url("../../images/ui-anim_basic_16x16.gif") right center no-repeat;
    }
</style>
}
@section jfooter{
   

    <script src="~/Scripts/js/application/appcheck.js"></script>
}
<h3 class="blank1">Danh Mục Kiểm Tra</h3>

<div class="bs-example4" data-example-id="simple-responsive-table">

    <div class="well" style="font-size:unset">
        @Html.HiddenFor(m => m.Id)
        
        <table style="margin:auto;display:block;width:50%">
            <thead>
                <tr>
                    <th  style="text-align:center;padding-bottom:30px" colspan="2">Phiếu Yêu Cầu Kiểm Tra Chất Lượng Hàng Hóa</th>
                </tr>
            </thead>
            <tr>
                <td style="width:40%">
                    Mã Số Phiếu
                </td>
                <td>
                    @Html.DisplayTextFor(m => m.LateId)
                </td>
            </tr>
            <tr>
                <td>
                    Bộ Phận Mời Kiểm Tra
                </td>
                <td>
                    @Html.DisplayTextFor(m => m.Ten_BP)
                </td>
            </tr>
            <tr>
                <td>
                    Địa Điểm Kiểm Tra
                </td>
                <td>
                    @Html.DisplayFor(m => m.Dia_Diem)
                </td>
            </tr>
            <tr>
                <td>
                    Thời Gian Kiểm Tra
                </td>
                <td>
                    @Html.DisplayFor(m => m.Date)
                </td>
            </tr>
            <tr>
                <td>
                    Hạng Mục Kiểm Tra
                </td>
                <td>
                    @Html.DisplayFor(m => m.Hang_Muc)
                </td>
            </tr>

            <tr>
                <td colspan="2" style="height:50px">
                    <strong>Tài Liệu Đính Kèm</strong>
                    @if (!string.IsNullOrEmpty(ViewBag.UrlFile))
                    {
                        <a href="@ViewBag.UrlFile">: Tải</a>
                    }
                    else
                    {
                        <strong>: (Không file đính kèm)</strong>
                    }

                </td>

            </tr>
            <tr>
                <td>
                    1  Hợp Đồng
                </td>
                <td>
                    @if (string.IsNullOrEmpty(Model.HopDong))
                {
                    <input type="checkbox" disabled />
            }
            else
            {
                <input type="checkbox" disabled checked />
        }
                    @Html.DisplayTextFor(m => m.HopDong)
                </td>
            </tr>
            <tr>
                <td>
                    2  Phiếu đề xuất
                </td>
                <td>
                    @if (string.IsNullOrEmpty(Model.DeXuat))
                {
                    <input type="checkbox" disabled />
            }
            else
            {
                <input type="checkbox" disabled checked />
        }
                    @Html.DisplayFor(m => m.DeXuat)
                </td>
            </tr>
            <tr>
                <td>
                    3  CO
                </td>
                <td>
                    @Html.DisplayFor(m => m.CO)
                </td>
            </tr>
            <tr>
                <td>
                    4  CQ
                </td>
                <td>
                    @Html.DisplayFor(m => m.CQ)
                </td>
            </tr>
            <tr>
                <td>
                    5  Khác
                </td>
                <td>
                    @Html.DisplayFor(m => m.Other)

                    @Html.DisplayTextFor(m => m.Note)
                </td>
            </tr>
        </table>
        
    </div>
   
    <div class="form-group">
        <button class='btn-sm btn-success' data-toggle='tooltip' title='Kiểm tra' onclick='getdata()'><span class='fa fa-pencil-square-o'></span></button>
        <button class="btn btn-primary" data-toggle='tooltip' title='Gửi phản hồi' onclick='showmodal()'><span class="fa fa-envelope-o"></span></button>
        <button class="btn btn-warng1" data-toggle='tooltip' title='Chuyển yêu cầu' onclick='ShowModal("#modalemail")'><span class="fa fa-mail-forward"></span></button>
        <a href="/Approvals/ExportExcel?ma=@Model.Id" type="button" data-toggle='tooltip' title='Xuất excel' class="btn btn-sm btn-info"><span class="fa fa-file-excel-o"></span></a>
    </div>
    <div class="table-responsive">
        <table class="display nowrap table-striped table-bordered" id="checktbl" style="vertical-align:central;font-family:'Times New Roman', Times, serif;font-size:11px">
            <thead>
                <tr>
                    <th rowspan="2" style="vertical-align:middle">STT</th>
                    <th rowspan="2" style="vertical-align:middle">Số PĐX</th>
                    <th rowspan="2" style="vertical-align:middle">HĐ/ĐĐH</th>
                    <th rowspan="2" style="vertical-align:middle">Tên Nhà Cung Cấp</th>
                    <th rowspan="2" style="vertical-align:middle">Tên Hàng Hóa</th>
                    <th colspan="2">Đặc điểm kỹ thuật</th>
                    <th colspan="3">Số Lượng</th>
                    <th colspan="6">Hồ Sơ Kèm Theo</th>
                    <th rowspan="2" style="vertical-align:middle">Kết Luận</th>
                </tr>
                <tr>
                    <th>Yêu Cầu</th>
                    <th>Thực Tế</th>
                    <th>Yêu Cầu</th>
                    <th>Thực Tế</th>
                    <th>Đơn Vị</th>
                    <th>CO</th>
                    <th>CQ</th>
                    <th>MTR</th>
                    <th>S/N</th>
                    <th>P/N</th>
                    <th>Khác</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div><!-- /.table-responsive -->
</div>
@Html.Partial("SendEmail")
<!-- Modal -->
@Html.Partial("~/Views/Shared/_Modal.cshtml")

<div class="modal fade" id="modalreponse" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Gửi Phản Hồi</h4>
            </div>
            <div class="">
                <br />
                <form class="form-horizontal" id="formemail">
                    <div class="form-group">
                        <label class="control-label col-md-2">File đính kèm</label>
                        <div class="col-md-10">
                            <input type="file" id="filename" class="form-control" accept=".pdf" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Kết luận</label>
                        <div class="col-md-10">
                            <select class="form-control" id="code">

                                <option value="A">Đạt</option>
                                <option value="R">Không đạt</option>
                                <option value="W">Đạt một phần</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Cc </label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" id="Cc" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="col-md-offset-2">
                    <input type="button" class="btn btn-primary" onclick="sendemail(@Model.Id)" value="Gửi" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Đóng">
                </div>
            </div>
        </div>

    </div>
</div>