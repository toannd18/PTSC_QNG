<div class="modal fade" id="modalemail" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Gửi Phiếu Yêu Cầu</h4>
            </div>
            <div class="">
                <br />
                <form class="form-horizontal" id="formemail">
                    <input type="hidden" id="txtemail" />
                    <input type="hidden" id="txtuser" />
                    <div class="form-group">
                        <label class="control-label col-md-2">Tên Người Nhận</label>
                        <div class="col-md-10">
                            <input type="text" id="name" class="form-control" name="name" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="col-md-offset-2">
                    <input type="button" class="btn btn-primary" onclick="forwardemail()" value="Gửi" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Đóng">
                </div>
            </div>
        </div>

    </div>
</div>