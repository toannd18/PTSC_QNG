@model DataModel.Model.Systems.ProviderModel

<form class="form-horizontal" id="providerform">
    @Html.HiddenFor(m => m.IsUpdate)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Ma_NCC, new { @class = "control-label col-md-2" })
