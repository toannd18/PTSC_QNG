            @Html.TextBoxFor(model => model.Ma_NCC, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Ma_NCC, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ten_NCC, new { @class = "control-label col-md-2" })
