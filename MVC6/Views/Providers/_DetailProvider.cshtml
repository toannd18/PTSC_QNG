        </div>
    </div>
    <div class="form-group">
        @Html.Label("Số Điện Thoại", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Tel, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Tel, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Số Fax", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Fax, new { @class = "form-control" })
