@model DataModel.Model.Systems.FunctionModel
<form class="form-horizontal" id="functionform">
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m=>m.IsUpdate)
    <div class="form-group">
        <label class="col-md-2 control-label">Mã Chức Năng</label>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Id, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
            @Html.ValidationMessageFor(m => m.Id, null, new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-md-2 control-label">Tên</label>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Đường Dẫn</label>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Url, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
            @Html.ValidationMessageFor(m => m.Url, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Thứ tự</label>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control", placeholder = "Nhập Dữ Liệu",@type= "number" })
            @Html.ValidationMessageFor(m => m.DisplayOrder, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Chức Năng Cha</label>
        <div class="col-md-8">
            @Html.DropDownListFor(m => m.ParentId,ViewBag.Parent as SelectList,"-- Chọn Chức Năng Cha --",new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ParentId, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
    <label class="col-md-2 control-label">Icon Css</label>
    <div class="col-md-8">
        @Html.TextBoxFor(m => m.IconCss, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
        @Html.ValidationMessageFor(m => m.IconCss, null, new { @class = "text-danger" })
    </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Trạng Thái</label>
        <div class="col-md-8">
            @Html.CheckBoxFor(m => m.Status)
            @Html.ValidationMessageFor(m => m.Status, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <input type="button" class="btn btn-success" onclick="savedata()" value="Lưu" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        </div>
    </div>
</form>
