@model DataModel.Model.Systems.RoleModel
 <form class="form-horizontal" id="roleform">
     @Html.HiddenFor(m => m.Id)
     <div class="form-group">
         <label class="col-md-2 control-label">Mã</label>
         <div class="col-md-8">
             @Html.TextBoxFor(m => m.Role, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
             @Html.ValidationMessageFor(m => m.Role, null, new { @class = "text-danger" })
         </div>
     </div>
     <div class="form-group">
         <label class="col-md-2 control-label">Tên</label>
         <div class="col-md-8">
             @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
             @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
         </div>
     </div>
     <div class="form-group">
         <div class="col-md-offset-2 col-md-8">
             <input type="button" class="btn btn-success" onclick="savedata()" value="Lưu" />
             <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
         </div>
     </div>
</form>
