@model DataModel.Model.Systems.PositionModel
<form class="form-horizontal" id="positionform">
    @Html.HiddenFor(m=>m.isUpdate)
    <div class="form-group">
        <label class="col-md-2 control-label">Mã Chức Vụ</label>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Ma_CV, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
            @Html.ValidationMessageFor(m => m.Ma_CV, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Tên Chức Vụ</label>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Ten_CV, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
            @Html.ValidationMessageFor(m => m.Ten_CV, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Cấp Độ</label>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Display, new { @class = "form-control", placeholder = "Nhập Dữ Liệu" })
            @Html.ValidationMessageFor(m => m.Display, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <input type="button" class="btn btn-success" onclick="savedata()" value="Lưu" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        </div>
    </div>
</form>