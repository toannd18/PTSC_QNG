@model DataModel.Model.DailyReport.DailyModel
@{
    var selectList = new SelectList(
        new List<SelectListItem>
        {
            new SelectListItem {Text = "Mức 1", Value = "1"},
            new SelectListItem {Text = "Mưc 2", Value = "2"},
            new SelectListItem {Text = "Mức 3", Value = "3",Selected=true},
            new SelectListItem {Text = "Mức 4", Value = "4"},
            new SelectListItem {Text = "Mức 5", Value = "5"},

        }, "Value", "Text");
   
}


  <form id="commentform" class="form-horizontal">
      @Html.HiddenFor(m=>m.Id)
      <div class="form-group">
          <label class="control-label col-md-2">Nội dung công việc</label>
          <div class="col-md-10">
              @Html.TextAreaFor(m=>m.Content_Job, new { @class = "form-control", disabled="disabled" })
          </div>
      </div>
      <div class="form-group">
          <label class="control-label col-md-2">Loại công việc</label>
          <div class="col-md-10">
              @Html.TextBoxFor(m => m.Ten_Job, new { @class = "form-control", disabled = "disabled" })
          </div>
      </div>
      <div class="form-group">
          <label class="control-label col-md-2">Kêt quả công việc</label>
          <div class="col-md-10">
              @Html.TextBoxFor(m => m.Result, new { @class = "form-control", disabled = "disabled" })
          </div>
      </div>
      <div class="form-group">
          <label class="control-label col-md-2">Mức</label>
          <div class="col-md-10">
              @Html.DropDownListFor(m => m.Level_1, selectList, new { @class = "form-control" })
          </div>
      </div>
      <div class="form-group">
          <label class="control-label col-md-2">Đánh giá</label>
          <div class="col-md-10">
              @Html.TextAreaFor(m=>m.Comment1,new {@class="form-control" })
          </div>
      </div>
      <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
              <button type="button" class="btn btn-primary" onclick="savecomment()">Lưu</button>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
          </div>
      </div>
  </form>