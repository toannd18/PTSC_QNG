@model DataModel.Model.Trade.DGNCCModel
@{ 
    int i = 0;
    List<SelectListItem> tm = new List<SelectListItem>();
    foreach(var item in ViewBag.NCC)
    {
        i += 1;
        tm.Add(new SelectListItem { Value = i.ToString(), Text = i.ToString() });
    } }
<div class="alert" id="Alert" role="alert" style="display:none">

</div>
<form class="form-horizontal" id="ncckttable">
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.DeXuatId)
    @Html.HiddenFor(m => m.DG)
   
    <div class="form-group">
        @Html.LabelFor(m => m.Ten_NCC, new { @class = "control-lable col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Ma_NCC, ViewBag.NCC as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Ma_NCC, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" id="idKT">
        @Html.LabelFor(m => m.DG_KT, new { @class = "control-lable col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.DG_KT, new SelectList(new List<SelectListItem> {
           new SelectListItem{Value=false.ToString(),Text="Không đạt"},
           new SelectListItem{Value=true.ToString(),Text="Đạt"} },
                               "Value", "Text"), new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DG_KT, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" id="idTM">
        @Html.LabelFor(m => m.DG_TM, new { @class = "control-lable col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.DG_TM, new SelectList(tm,"Value","Text"),"--- Chọn ---", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Ma_NCC, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" class="btn btn-info" onclick="savencc()" value="Lưu">
            <button class="btn btn-default" data-dismiss="modal">Đóng</button>
        </div>
    </div>
</form>