@model DataModel.Model.Trade.DGNCCModel
@{
    ViewBag.Title = "Chọn nhà cung cấp";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<h2>Lựa chọn nhà cung cấp</h2>

<div class="bs-example4" data-example-id="contextual-table">

    <form class="form-horizontal" action="/Commerce/Requests/DetailNCC" method="post">
        @Html.ValidationSummary(true, "", new { @class = "alert-danger" })

        <div class="form-group">
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon" style="min-width:50px">
                        @Html.LabelFor(m => m.DeXuatId)
                    </span>
                    @Html.TextBoxFor(m => m.DeXuatId, new { @class = "form-control",@readonly= "readonly" })
                </div>
            </div>
</div>
        <div class="form-group">
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon" style="min-width:50px">@Html.LabelFor(m => m.Ten_NCC)</span>
                    @Html.TextBoxFor(m => m.Ten_NCC, new { @class = "form-control" })
                    <span class="input-group-btn">
                        <a href="#" class="btn btn-default"><span class="fa fa-search"></span></a>
                    </span>
                </div>
                @Html.ValidationMessageFor(m => m.Ma_NCC, "", new { @class = "text-danger" })
            </div>
            </div>
            @Html.HiddenFor(m => m.Ma_NCC)
            <div class="form-group">
                <div class="col-md-offset-3 col-md-8">
                    <input type="submit" class="btn btn-primary" value="Lưu" />
                    <a href="@("/Commerce/Requests/IndexDetail?ma="+Model.DeXuatId)" class="btn btn-default" role="button">Quay lại</a>
                </div>
            </div>
</form>
</div>