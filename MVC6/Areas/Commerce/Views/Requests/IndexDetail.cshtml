@model DataModel.Model.Trade.DeXuatModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
    var user = ViewBag.User as List<Data.Data.AppUser>;
}
@section style{
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />

    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}
@section jfooter{

    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>

    <script src="~/Scripts/DataTables/dataTables.select.min.js"></script>
    <script src="~/Scripts/js/trade/tradedetail.js"></script>
}
<div class="bs-example4"  data-example-id="simple-responsive-table">
    <input id="ma" type="hidden" value="@Model.Id" />
    <div class="table-responsive">
        <table style="width:70%;margin:auto" class="center">
            <thead>
                <tr>
                    <th style="text-align:center;font-size:20px" colspan="2">Chi tiết phiếu đề xuất</th>
                </tr>
                <tr>
                    <td style="text-align:center;padding-bottom:10px" colspan="2">Ngày lập @(Model.Ngay_Tao.HasValue ? Model.Ngay_Tao.Value.ToString("dd/MM/yyyy") : "")</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="padding-left:10px">Đề xuất số: @Model.Ma</td>
                </tr>
                <tr>
                    <td style="padding-bottom:10px;padding-left:10px"> Nội dung đề xuất: @Model.Tieu_De</td>
                    <td style="padding-bottom:10px">Loại đề xuất: @(Model.Kieu ? "Hàng hóa" : "Dịch vụ")</td>
                </tr>
                <tr>
                    <td style="font-weight:bold">Tiến độ mua hàng hóa:</td>
                </tr>
                <tr>
                    <td style="padding-left:10px"> Ngày gửi hồ sơ mời chào giá: @(Model.Ngay_Gui.HasValue ? Model.Ngay_Gui.Value.ToString("dd/MM/yyyy") : "")</td>
                </tr>
                <tr>
                    <td style="padding-left:10px"> Phê duyệt kết quả đánh giá: @(Model.Ngay_PD.HasValue ? Model.Ngay_PD.Value.ToString("dd/MM/yyyy") : "")</td>
                </tr>
                <tr>
                    <td style="padding-left:10px"> Đàm phán ký kết hợp đồng:@(Model.Ngay_HD.HasValue ? Model.Ngay_HD.Value.ToString("dd/MM/yyyy") : "")</td>
                </tr>
                <tr>
                    <td style="padding-left:10px;padding-bottom:10px"> Thực hiện hợp đồng:@(Model.Ngay_PHD.HasValue ? Model.Ngay_PHD.Value.ToString("dd/MM/yyyy") : "")</td>
                </tr>
                <tr>
                    <td style="font-weight:bold">Danh sách thành viên tổ đánh giá:</td>
                </tr>
                <tr>
                    <td style="padding-left:10px"> Tổ trưởng: @user.Where(m => m.UserName == Model.Ten_Dg).Select(m => m.FullName).FirstOrDefault()</td>
                </tr>
                <tr>
                    <td style="padding-left:10px"> Tổ phó thương mại: @user.Where(m => m.UserName == Model.Ten_Dg1).Select(m => m.FullName).FirstOrDefault()</td>
                </tr>
                <tr>
                    <td style="padding-left:10px"> Tổ phó kỹ thuật: @user.Where(m => m.UserName == Model.Ten_Dg2).Select(m => m.FullName).FirstOrDefault()</td>
                </tr>
                <tr>
                    <td style="padding-left:10px"> Tổ viên thương mại: @user.Where(m => m.UserName == Model.Ten_Dg3).Select(m => m.FullName).FirstOrDefault()</td>
                </tr>
                <tr>
                    <td style="padding-left:10px"> Tổ viên kỹ thuật: @user.Where(m => m.UserName == Model.Ten_Dg4).Select(m => m.FullName).FirstOrDefault()</td>
                </tr>
            </tbody>
        </table>
    </div><!-- /.table-responsive -->
</div>

<!--Nhà cung cấp-->
<div class="bs-example4" data-example-id="contextual-table">
    <div class="table-responsive">
        <div class="form-group">
            <button class="btn btn-primary" onclick="loadncc()" data-toggle="tooltip" data-placement="bottom" title="Thêm"><span class="fa fa-plus-square-o"></span></button>
            <button class="btn btn-danger" onclick="deletencc()" data-toggle="tooltip" data-placement="bottom" title="Xóa"><span class="fa fa-trash-o"></span></button>
            <div class="btn-group">
                <button class="btn btn-success btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Đánh giá <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" style="min-width:20px">
                    <li><a href="/Commerce/Evaluations/IndexSpec?dx=@Model.Id">Kỹ thuật</a></li>
                    <li><a href="/Commerce/Evaluations/IndexCom?dx=@Model.Id">Thương mại</a></li>
                </ul>
            </div>
            <div class="btn-group">
                <button class="btn btn-info btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    In <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" style="min-width:20px">
                    <li><a href="/Report/Reports/EvaluePlan?dx=@Model.Id">Kế hoạch</a></li>
                    <li><a href="/Report/Reports/EvaluePrice?dx=@Model.Id">Chào giá</a></li>
                    <li><a href="/Report/Reports/EvalueTrade?dx=@Model.Id">Đánh giá HĐ</a></li>
                    <li><a href="/Report/Reports/EvalueTrade1?dx=@Model.Id">Đánh giá ĐĐH</a></li>
                </ul>
            </div>

        </div>
        <table class="table-bordered table-condensed" id="ncctable" style="font-family:'Times New Roman', Times, serif;font-size:11px">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên nhà cung cấp</th>
                    <th>Đánh giá kỹ thuật</th>
                    <th>Đánh giá thương mại</th>
                    <th>Tổng đánh giá</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
