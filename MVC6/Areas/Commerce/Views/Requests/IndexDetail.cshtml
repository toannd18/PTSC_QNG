            <table class="table-bordered table-condensed" id="marterialtable" style="font-family:'Times New Roman', Times, serif;font-size:11px">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Diễn giải</th>
                        <th>Đơn vị tính</th>
