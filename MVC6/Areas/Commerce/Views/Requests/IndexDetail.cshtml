        <button type="button" class="list-group-item" data-toggle="tooltip" data-placement="top" title="Đầu trang" onclick="ptsc.loadanimate('home')"><span class="glyphicon glyphicon-arrow-up"></span></button>
        <button type="button" class="list-group-item" data-toggle="tooltip" data-placement="left" title="Kỹ thuật" onclick="ptsc.loadanimate('#kt')"><span class="glyphicon glyphicon-wrench"></span></button>
        <button type="button" class="list-group-item" data-toggle="tooltip" data-placement="bottom" title="Thương mại" onclick="ptsc.loadanimate('#tm')"><span class="glyphicon glyphicon-signal"></span></button>
